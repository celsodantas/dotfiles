[user]
	name = Celso Dantas
	email = celso.dantas@booking.com
[alias]
	s  = status
 	st = status
 	ci = commit
 	co = checkout
	d  = diff
 	dc = diff --cached
 	amend = commit --amend
  fpush = push --force-with-lease

	clear-merges = !git branch -d `git branch --merged | grep -v \"^*\" | tr -d \"\\n\"`

[push]
  default = current
[pull]
  rebase = true
	default = current
[color]
 	ui = always
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
  autocrlf = false
	excludesfile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[pager]
  branch = false
