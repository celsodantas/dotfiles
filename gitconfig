[user]
	name = Celso Dantas
	email = celsodantas@gmail.com
[alias]
	s  = status
 	st = status
 	ci = commit
 	co = checkout
	d  = diff
 	dc = diff --cached
 	amend = commit --amend

	clear-merges = !git branch -d `git branch --merged | grep -v \"^*\" | tr -d \"\\n\"`

[push]
	default = current
[pull]
	rebase = true
	default = current
[color]
 	ui = auto
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
        autocrlf = false
	excludesfile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
	branch = diff-so-fancy | less --tabs=1,5 -RFX
	stash = diff-so-fancy | less --tabs=1,5 -RFX
	log = diff-so-fancy | less --tabs=1,5 -RFX
[commit]
  verbose = true
