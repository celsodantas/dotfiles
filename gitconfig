[user]
	name = Celso Dantas
	email = celsodantas@gmail.com
[alias]
	s  = status
 	st = status
 	ci = commit
 	co = checkout
	d  = diff
 	dc = diff --cached
 	amend = commit --amend

	clear-merges = !git branch -d `git branch --merged | grep -v \"^*\" | tr -d \"\\n\"`
  follow = "!f() { git log --topo-order -u -L $2,${3:-$2}:$1; }; f"

[push]
	default = current
[pull]
	rebase = true
	default = current
[color]
 	ui = auto
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
  autocrlf = false
	excludesfile = ~/.gitignore
	commitGraph = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
	branch = diff-so-fancy | less --tabs=1,5 -RFX
	stash = diff-so-fancy | less --tabs=1,5 -RFX
	log = diff-so-fancy | less --tabs=1,5 -RFX
[commit]
  verbose = true
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[diff-so-fancy]
	stripLeadingSymbols = false
[credential]
	helper = 
	helper = store --file /opt/dev/var/private/git_credential_store
